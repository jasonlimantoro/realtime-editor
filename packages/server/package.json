  "lint-staged": {
    "*.{js,jsx,css}": [
      "prettier --write --single-quote",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
