{
  "name": "react-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "draft-js": "^0.11.5",
    "formik": "^2.1.4",
    "immer": "^6.0.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "slate": "^0.57.1",
    "slate-react": "^0.57.1",
    "socket.io-client": "^2.3.0",
    "typescript": "~3.7.2",
    "uuid": "^7.0.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:style start:js",
    "start:js": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:style": "postcss src/styles/index.scss -o src/styles/tailwind.css",
    "watch:style": "yarn build:style --watch",
    "prebuild": "cross-env NODE_ENV=production yarn build:style",
    "postinstall": "patch-package",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.10",
    "@types/draft-js": "^0.10.38",
    "@types/lodash": "^4.14.149",
    "@types/moment": "^2.13.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/reselect": "^2.2.0",
    "@types/slate": "^0.47.5",
    "@types/slate-react": "^0.22.9",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^7.0.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autoprefixer": "^9.7.4",
    "cross-env": "^7.0.2",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-prettier": "^3.1.2",
    "lint-staged": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.1",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^2.0.1",
    "redux-devtools-extension": "^2.13.8",
    "tailwindcss": "^1.2.0"
  }
}
